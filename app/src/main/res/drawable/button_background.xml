<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:drawable="@drawable/button_gradient_blue_pressed"/>

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/button_blue"
                android:endColor="@color/button_pressed_blue"
                android:angle="0"/>
            <stroke android:width="2dp" android:color="@color/white"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/gloria_hallelujah</item>
        <item name="android:textSize">@dimen/button_authorization_font_size</item>
        <item name="android:layout_width">@dimen/button_authorization_width</item>
        <item name="android:layout_height">@dimen/button_authorization_height</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
<!--    app:srcCompat="@drawable/got"-->
    <style name="main_pic">
        <item name="srcCompat">@drawable/got</item>
        <item name="android:layout_marginTop">-52dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/main_pic_height</item>
    </style>

    <style name="back_button_icon" parent="Widget.AppCompat.Button">
        <item name="android:src">@drawable/ic_round_arrow_back_ios_32px</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:background">@color/background_black</item>
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
    </style>
</resources>